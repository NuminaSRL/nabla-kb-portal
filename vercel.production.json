{
  "version": 2,
  "name": "nabla-kb-portal",
  "alias": ["kb.nabla.ai"],
  "regions": ["iad1"],
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "env": {
    "NEXT_PUBLIC_SUPABASE_URL": "@kb-portal-supabase-url",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "@kb-portal-supabase-anon-key",
    "SUPABASE_SERVICE_ROLE_KEY": "@kb-portal-supabase-service-role-key",
    "EMBEDDING_SERVICE_URL": "@kb-portal-embedding-service-url",
    "NEXT_PUBLIC_APP_URL": "https://kb.nabla.ai",
    "NEXT_PUBLIC_APP_NAME": "NABLA KB Portal",
    "NODE_ENV": "production",
    "NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY": "@kb-portal-stripe-publishable-key",
    "STRIPE_SECRET_KEY": "@kb-portal-stripe-secret-key",
    "NEXT_PUBLIC_STRIPE_PRO_PRICE_ID": "@kb-portal-stripe-pro-price-id",
    "NEXT_PUBLIC_STRIPE_ENTERPRISE_PRICE_ID": "@kb-portal-stripe-enterprise-price-id",
    "STRIPE_WEBHOOK_SECRET": "@kb-portal-stripe-webhook-secret",
    "NEXT_PUBLIC_ENABLE_SEARCH": "true",
    "NEXT_PUBLIC_ENABLE_AUTH": "true",
    "NEXT_PUBLIC_ENABLE_2FA": "true",
    "NEXT_PUBLIC_ENABLE_ANALYTICS": "true",
    "NEXT_PUBLIC_SENTRY_DSN": "@kb-portal-sentry-dsn",
    "SENTRY_AUTH_TOKEN": "@kb-portal-sentry-auth-token",
    "NEXT_PUBLIC_VERCEL_ANALYTICS_ID": "@kb-portal-vercel-analytics-id"
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ]
}
